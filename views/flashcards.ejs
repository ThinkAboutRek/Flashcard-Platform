<!-- views/flashcards.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flashcards</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <header class="bg-primary text-white text-center py-4">
    <h1>Flashcards</h1>
    <nav class="nav justify-content-center">
      <a href="/" class="nav-link text-white">Back to Dashboard</a>
    </nav>
  </header>

  <main class="container mt-5">
    <section class="mb-5">
      <h2>All Flashcards</h2>
      <ul class="list-group">
        <% flashcards.forEach(flashcard => { %>
          <li class="list-group-item">
            <strong>Question:</strong> <%= flashcard.question %><br>
            <strong>Answer:</strong> <%= flashcard.answer %><br>
            <strong>Difficulty:</strong> <%= flashcard.difficulty %>
          </li>
        <% }) %>
      </ul>
    </section>
  </main>

  <footer class="bg-light text-center py-3 mt-5">
    <p>&copy; 2024 Flashcard Platform</p>
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
