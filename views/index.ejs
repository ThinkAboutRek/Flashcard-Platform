<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flashcard Platform - Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <header class="bg-primary text-white text-center py-4">
    <h1>Flashcard Platform</h1>
    <nav class="nav justify-content-center">
      <a href="/collections" class="nav-link text-white">Collections</a>
      <a href="/users" class="nav-link text-white">Users</a>
    </nav>
  </header>

  <main class="container mt-5">
    <!-- Welcome Section -->
    <section class="mb-5">
      <h2>Welcome to the Flashcard Platform</h2>
      <p class="lead">Select a section to begin or browse through flashcard sets:</p>
      <div class="list-group">
        <a href="/collections" class="list-group-item list-group-item-action">View Collections</a>
        <a href="/users" class="list-group-item list-group-item-action">View Users</a>
      </div>
    </section>

    <!-- Flashcard Sets Section -->
    <section>
      <h2>Available Flashcard Sets</h2>
      <div class="row">
        <% sets.forEach(set => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><strong>Set Name:</strong> <%= set.name %></h5>
                <p class="card-text">
                  <strong>Cards:</strong>
                <ul>
                  <% if (Array.isArray(set.cards) && set.cards.length > 0) { %>
                    <% set.cards.forEach(card => { %>
                      <li>Q: <%= card.question %>, A: <%= card.answer %></li>
                    <% }) %>
                  <% } else { %>
                    <li>No cards available</li>
                  <% } %>
                </ul>
                </p>

                <!-- Update and Delete Actions -->
                <div class="mt-3">
                  <form method="POST" action="/api/sets/<%= set.id %>/update">
                    <h6 class="text-secondary">Update Set</h6>
                    <div class="form-group">
                      <label for="name-<%= set.id %>">Set Name:</label>
                      <input type="text" id="name-<%= set.id %>" name="name" value="<%= set.name %>" class="form-control" required>
                    </div>
                    <div id="flashcard-fields-update-<%= set.id %>" class="form-group">
                      <label>Flashcards:</label>
                      <% if (Array.isArray(set.cards)) { %>
                        <% set.cards.forEach(card => { %>
                          <div class="flashcard-group mb-3 d-flex align-items-center justify-content-between">
                            <div class="flex-grow-1">
                              <input type="text" name="questions[]" value="<%= card.question %>" placeholder="Question" class="form-control mb-2" required>
                              <input type="text" name="answers[]" value="<%= card.answer %>" placeholder="Answer" class="form-control mb-2" required>
                            </div>
                            <button type="button" class="btn btn-outline-danger btn-sm ml-2 remove-flashcard">Remove</button>
                          </div>
                        <% }) %>
                      <% } %>
                    </div>
                    <div class="d-flex justify-content-between">
                      <button type="button" id="add-flashcard-update-<%= set.id %>" class="btn btn-outline-secondary btn-sm mb-1">Add Flashcard</button>
                      <button type="submit" class="btn btn-warning btn-sm ml-2">Update</button>
                    </div>
                  </form>
                  <form method="POST" action="/api/sets/<%= set.id %>/delete">
                    <button type="submit" class="btn btn-danger btn-sm mt-2">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Create a New Flashcard Set -->
    <section class="mt-5">
      <h2>Create New Set</h2>
      <form method="POST" action="/api/sets" class="border p-4 rounded bg-light">
        <div class="form-group">
          <label for="name">Set Name:</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        <div id="flashcard-fields" class="form-group">
          <label>Flashcards:</label>
          <div class="flashcard-group mb-3 d-flex align-items-center justify-content-between">
            <div class="flex-grow-1">
              <input type="text" name="questions[]" placeholder="Question" class="form-control mb-2" required>
              <input type="text" name="answers[]" placeholder="Answer" class="form-control mb-2" required>
            </div>
            <button type="button" class="btn btn-outline-danger btn-sm ml-3 remove-flashcard">Remove</button>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <button type="button" id="add-flashcard" class="btn btn-outline-secondary btn-sm">Add Flashcard</button>
          <button type="submit" class="btn btn-primary ml-2">Create Set</button>
        </div>
      </form>
    </section>
  </main>

  <footer class="bg-light text-center py-3 mt-5">
    <p>&copy; 2024 Flashcard Platform</p>
  </footer>

  <script>
    // Add Flashcard Field for Update Form
    document.querySelectorAll('[id^="add-flashcard-update-"]').forEach(button => {
      button.addEventListener('click', () => {
        const setId = button.id.replace('add-flashcard-update-', '');
        const flashcardFields = document.getElementById(`flashcard-fields-update-${setId}`);
        const newGroup = document.createElement('div');
        newGroup.className = 'flashcard-group mb-3 d-flex align-items-center justify-content-between';
        newGroup.innerHTML = `
          <div class="flex-grow-1">
            <input type="text" name="questions[]" placeholder="Question" class="form-control mb-2" required>
            <input type="text" name="answers[]" placeholder="Answer" class="form-control mb-2" required>
          </div>
          <button type="button" class="btn btn-outline-danger btn-sm ml-2 remove-flashcard">Remove</button>
        `;
        flashcardFields.appendChild(newGroup);

        // Add remove functionality to the newly added button
        const removeButton = newGroup.querySelector('.remove-flashcard');
        removeButton.addEventListener('click', () => newGroup.remove());
      });
    });

    // Add Remove Functionality to Existing Flashcards
    document.querySelectorAll('.remove-flashcard').forEach(button => {
      button.addEventListener('click', function () {
        this.parentElement.remove();
      });
    });

    // Add Flashcard Field for Create Form
    document.getElementById('add-flashcard').addEventListener('click', () => {
      const flashcardFields = document.getElementById('flashcard-fields');
      const newGroup = document.createElement('div');
      newGroup.className = 'flashcard-group mb-3 d-flex align-items-center justify-content-between';
      newGroup.innerHTML = `
        <div class="flex-grow-1">
          <input type="text" name="questions[]" placeholder="Question" class="form-control mb-2" required>
          <input type="text" name="answers[]" placeholder="Answer" class="form-control mb-2" required>
        </div>
        <button type="button" class="btn btn-outline-danger btn-sm ml-3 remove-flashcard">Remove</button>
      `;
      flashcardFields.appendChild(newGroup);

      // Add remove functionality to the newly added button
      const removeButton = newGroup.querySelector('.remove-flashcard');
      removeButton.addEventListener('click', () => newGroup.remove());
    });
  </script>

</body>

</html>
