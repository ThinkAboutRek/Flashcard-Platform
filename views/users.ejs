<!-- views/users.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <header class="bg-primary text-white text-center py-4">
    <h1>Users</h1>
    <nav class="nav justify-content-center">
      <a href="/" class="nav-link text-white">Back to Dashboard</a>
    </nav>
  </header>

  <main class="container mt-5">
    <section class="mb-5">
      <h2>All Users</h2>
      <ul class="list-group">
        <% users.forEach(user=> { %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <strong>Username:</strong>
                <%= user.username %> <br>
                  <strong>Admin:</strong>
                  <%= user.admin ? "Yes" : "No" %>
              </div>
              <!-- Update User Form -->
              <form method="POST" action="/api/users/<%= user.id %>/update" class="form-inline mr-2">
                <input type="text" name="username" value="<%= user.username %>" class="form-control mr-2" required>
                <label class="mr-2">Admin</label>
                <input type="checkbox" name="admin" value="true" <%=user.admin ? "checked" : "" %>
                class="form-check-input">
                <button type="submit" class="btn btn-warning btn-sm ml-2">Update</button>
              </form>

              <!-- Delete User Form -->
              <form method="POST" action="/api/users/<%= user.id %>/delete">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </li>
          <% }) %>
      </ul>
    </section>

    <section>
      <h2>Add New User</h2>
      <form method="POST" action="/api/users" class="border p-4 rounded bg-light">
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" name="username" id="username" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="admin">Admin:</label>
          <input type="checkbox" name="admin" id="admin" class="form-check-input ml-1" value="true">
        </div>
        <button type="submit" class="btn btn-primary">Add User</button>
      </form>
    </section